<div class="container">
    <section class="form-section">
        <h1 class="section-title">Add a New PDF</h1>
        {{#if error}}
            <div class="alert alert-danger">{{error}}</div>
        {{/if}}
        <form action="/pdfs/add" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <label for="title">Title</label>
                <input type="text" id="title" name="title" required>
            </div>
            <div class="form-group">
                <label for="description">Description</label>
                <textarea id="description" name="description" rows="3"></textarea>
            </div>
            <div class="form-group">
                <label for="author">Author</label>
                <input type="text" id="author" name="author">
            </div>
            <div class="form-group">
                <label for="pdfFile">PDF File</label>
                <input type="file" id="pdfFile" name="pdfFile" accept=".pdf" required>
            </div>
            <div class="form-group checkbox-group">
                <label style="display: flex; align-items: center; gap: 10px; cursor: pointer;">
                    <input type="checkbox" name="is_public" value="1" style="width: auto; margin: 0;"> 
                    <span>Share with others (Public)</span>
                </label>
            </div>
            <button type="submit" class="btn btn-primary">Add PDF</button>
        </form>
    </section>
        <a href="/" class="btn btn-secondary mt-2">Back to Home</a>
</div>
