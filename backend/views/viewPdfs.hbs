<div class="container mt-5">
    <h1>My PDFs</h1>
    <a href="/addPdf" class="btn btn-primary mb-3">Add New PDF</a>
    {{#if pdfs.length}}
        <ul class="list-group">
            {{#each pdfs}}
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <div>
                        <h5>{{this.title}}</h5>
                        <p>{{this.description}}</p>
                        <small>Author: {{this.author}}</small>
                    </div>
                    <div>
                        <a href="/viewPdfs/{{this.filename}}" class="btn btn-info btn-sm" target="_blank">View</a>
                        <a href="/viewPdfs/download/{{this.filename}}" class="btn btn-success btn-sm">Download</a>
                    </div>
                </li>
            {{/each}}
        </ul>
    {{else}}
        <p>No PDFs found. <a href="/addPdf">Add one now</a>.</p>
    {{/if}}
</div>