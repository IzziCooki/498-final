<div class="container">
    <h1 class="section-title">My PDF Library</h1>
    <div class="text-center mt-2">
        <a href="/pdfs/add" class="btn btn-primary">Add New PDF</a>
    </div>
    {{#if pdfs.length}}
        <div class="pdf-grid">
            {{#each pdfs}}
                <div class="pdf-card">
                    <div class="pdf-card-header">
                        <h3>
                            {{this.title}}
                            {{#if this.is_public}}
                                <span class="badge badge-success" style="font-size: 0.6em; vertical-align: middle;">Public</span>
                            {{else}}
                                <span class="badge badge-secondary" style="font-size: 0.6em; vertical-align: middle;">Private</span>
                            {{/if}}
                        </h3>
                    </div>
                    <div class="pdf-card-body">
                        <p>{{this.description}}</p>
                    </div>
                    <div class="pdf-card-footer">
                        <span class="pdf-author">{{this.author}}</span>
                        <div class="button-group">
                            <a href="/pdfs/view/{{this.id}}" class="btn btn-secondary">Details</a>
                            <a href="/pdfs/{{this.filename}}" class="btn btn-info" target="_blank">View</a>
                            <a href="/pdfs/download/{{this.filename}}" class="btn btn-success">Download</a>
                        </div>
                    </div>
                </div>
            {{/each}}
        </div>
        <a href="/" class="btn btn-secondary mt-2">Back to Home</a>
    {{else}}
        <div class="empty-state text-center">
            <p>No PDFs found in your library.</p>
            <a href="/pdfs/add" class="btn btn-primary mt-2">Add your first PDF</a>
        </div>
        <a href="/" class="btn btn-secondary mt-2">Back to Home</a>
    {{/if}}
</div>